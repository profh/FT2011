
<div id="dialog-new-measurement" title="<%= @form_title %>">
	<p>All form fields are required.</p>
		<% form_for(@measurement) do |f| %>
		<% if @measurement.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@measurement.errors.count, "error") %> prohibited this measurement from being saved:</h2>

	      <ul>
	      <% @measurement.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

		<div class="form_label"><%= f.label :name %></div>
		<%= f.text_field :name %>
		<br />

		<div class="form_label"><%= f.label :description %></div>
		<%= f.text_area :description, :rows => 5 %>
		<br />

		<div class="form_label"><%= f.label :active %></div>
		<%= f.check_box :active %>
		<br />

		<div class="form_label"><%= f.label :measurement_category_id %></div>
		<%= f.collection_select :measurement_category_id, MeasurementCategory.all, :id, :title, :prompt => "- Select Category -" %>
		<br />

		<div class="actions">
	    <%= f.submit %>
	  </div>

		<% end %>
</div>
