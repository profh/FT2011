<div id="content" class="color_checkpoints">
	<div class="clear"></div>
		
	<div id="whole" class="content_area">
		<div class="checkpoints_border">
			<div class="checkpoints_title">Measurement Category Details</div>
			<div class="checkpoints_name"><%= @measurement_category.title %></div>
			<div class="clear"></div>
			
			<div class="checkpoints_description">
				<div class="checkpoints_item_header">Name</div>
				<div class="checkpoints_item_value"><%= @measurement_category.title %></div>
			</div>
			<div class="clear"></div>
			<div class="checkpoints_description">
			<div class="checkpoints_item_header">Measurements within <%= @measurement_category.title %>:</div>
			<table>
        	<% @measurements.each do |measurement|%>
        	    <tr><td><div class="checkpoints_item_value"><%= link_to measurement.name, measurement_path(measurement)%></div></td></tr>
        	<%end%>
        	</table>
        	</div>
		</div>		
		
		<div class="align_right">
			<div class="button"><%= link_to 'Edit', edit_measurement_category_path(@measurement_category) %></div>
			<div class="button"><%= link_to 'New Measurement', new_measurement_path + "/" + @measurement_category.id.to_s %></div>
			<div class="button"><%= link_to 'Back', measurement_categories_path %></div>
		</div>
	</div>
	<div class="clear"></div>
</div>