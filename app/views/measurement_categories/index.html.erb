<div id="content" class="color_checkpoints">
	<div class="clear"></div>
		
	<div id="whole" class="content_area">
		<div class="checkpoints_border">
			<div class="checkpoints_title">Measurements</div>
			<div class="checkpoints_name">All Categories</div>
			<div class="clear"></div>
			
			<div class="checkpoints_description">
				<hr />
				<% @measurement_categories.each do |measurement_category| %>

				<div class="checkpoints_item_header">Category Name</div>
				<div class="checkpoints_item_value"><%= measurement_category.title %></div>
				
				<div class="clear"></div>
				
				<div class="button"><%= link_to 'Show', measurement_category %></div>
				<div class="button"><%= link_to 'Edit', edit_measurement_category_path(measurement_category) %></div>
				<div class="button"><%= link_to 'Delete', measurement_category, :confirm => 'Are you sure?', :method => :delete %></div>
    
				<div class="clear"></div>
				<hr />
				
				<% end %>
			</div>
			<div class="clear"></div>
		</div>
		
		
		<div class="align_right">
			<div class="button"><%= link_to 'New Measurement Category', new_measurement_category_path %></div>
			<div class="button"><%= link_to 'Back to Checkpoints', checkpoints_path %></div>
		</div>
	</div>
				
	<div class="clear"></div>
</div>