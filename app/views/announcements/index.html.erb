<div id="content" class="color_home">
	<div class="clear"></div>
		
	<div id="whole" class="content_area">
		<div class="home_border">
			<div class="home_title">Announcements</div>
			<div class="home_name">All Announcements</div>
			<div class="clear"></div>
			
			<div class="home_description">
				<% if(@announcements.length == 0) %>
					There are currently no announcements.
				<% end %>
				
				<% @announcements.each do |announcement| %>
				
				<div class="home_item_header">Subject</div>
				<div class="home_item_value"><%= announcement.title %></div>
				
				<div class="home_item_header">Message</div>
				<div class="home_item_value"><%= announcement.body %></div>
								
				<div class="clear"></div>
				
				<% if current_user.is_admin? || (current_user.is_organization_admin? && current_user.id == announcement.user_id)%>
					<div class="button"><%= link_to 'Edit', edit_announcement_path(announcement) %></div>
					<div class="button"><%= link_to 'Delete', announcement, :confirm => 'Are you sure?', :method => :delete %></div>				
				<% end %>
				<div class="clear"></div>
				<hr />
				
				<% end %>
			</div>
			<div class="clear"></div>
		</div>
		
		
		<div class="align_right">
			<div class="button"><%= link_to 'New Announcement', new_announcement_path %></div>
		</div>
	</div>
				
	<div class="clear"></div>
</div>
