<div id="content" class="color_profile">
	<div class="clear"></div>
		
	<div id="whole" class="content_area">
		<div class="profile_border">
			<div class="profile_title">Organizations</div>
			<div class="profile_name">All Organizations</div>
			<div class="clear"></div>
			
			<div class="profile_description">
				<% @organizations_all.each do |org| %>
					<div class="profile_item_header">Organization Type</div>
					<div class="profile_item_value"><%= org.organization_type.name %></div>
					
					<div class="profile_item_header">Location</div>
					<div class="profile_item_value"><%= org.location.name %></div>
					
					<div class="profile_item_header">Active</div>
					<div class="profile_item_value"><%= org.active %></div>
					
					<div class="clear"></div>					
				
					<div class="button"><%= link_to 'Show', org %></div>
					<div class="button"><%= link_to 'View Progress', organization_analysis_path(org.id) %></div>
					<div class="button"><%= link_to 'Edit', edit_organization_path(org) %></div>
					<div class="button"><%= link_to 'Delete', org, :confirm => 'Are you sure?', :method => :delete %></div>				
					
					<br /><br /><hr />
					
					<div class="clear"></div>					
				<% end %>
			</div>
			<div class="clear"></div>
		</div>
		
		
		<div class="align_right">
			<div class="button"><%= link_to 'Back', organizations_path %></div>
		</div>
	</div>
				
	<div class="clear"></div>
</div> 