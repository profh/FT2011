<h1>Listing responses</h1>

<table>
  <tr>
    <th>Question</th>
    <th>User</th>
    <th>Response value</th>
    <th>Checkpoint user</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @responses.each do |response| %>
  <tr>
    <td><%= response.question_id %></td>
    <td><%= response.user_id %></td>
    <td><%= response.response_value %></td>
    <td><%= response.checkpoint_user_id %></td>
    <td><%= link_to 'Show', response %></td>
    <td><%= link_to 'Edit', edit_response_path(response) %></td>
    <td><%= link_to 'Destroy', response, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

