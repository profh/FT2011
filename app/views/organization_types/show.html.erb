<div id="content" class="color_profile">
	<div class="clear"></div>
		
	<div id="whole" class="content_area">
		<div class="profile_border">
			<div class="profile_title">About</div>
			<div class="profile_name"><%=h @organization_type.name %></div>
			<div class="clear"></div>
			
			<div class="profile_description">
				<%=h @organization_type.description %>
				<div class="clear"></div>	
				<div class="profile_item_header">Active</div>
				<div class="profile_item_value"><%=h @organization_type.active%></div>
				<div class="clear"></div>
			</div>	

		</div>
		
		
		<div class="align_right">
			<div class="button"><%= link_to 'Edit', edit_organization_type_path(@organization_type) %></div>
			<div class="button"><%= link_to 'Back', organization_types_path %></div>
		</div>
	</div>
				
	<div class="clear"></div>
</div>