<div id="content" class="color_checkpoints">
	<div class="clear"></div>
		
	<div id="whole" class="content_area">
		<div class="checkpoints_border">
			<div class="checkpoints_title">Checkpoints</div>
			<div class="checkpoints_name">All Checkpoints</div>
			<div class="clear"></div>
			
			<div class="checkpoints_description">
				<% @checkpoints_all.each do |checkpoint| %>
					<table>
						<tr>
							<td width="60px">
								<div class="calendar_checkpoints">
									<div class="month"><%=h checkpoint.due_on.strftime("%b") %></div>
									<div class="date"><%=h checkpoint.due_on.strftime("%d") %></div>
								</div>
							</td>
							<td>
								<div class="button"><%= link_to checkpoint.name, checkpoint %></div>
							</td>
						</tr>
					</table>
				<% end %>
			</div>
			<div class="clear"></div>
		</div>
		
		<div class="align_right">
			<div class="button"><%= link_to 'Back', checkpoints_path %></div>
		</div>
	</div>
				
	<div class="clear"></div>
</div> 